{
  "name": "sweclockers-writing-rules",
  "version": "3.0.0",
  "private": true,
  "description": "Used in Better SweClockers.",
  "keywords": [
    "SweClockers",
    "highlight",
    "mistakes",
    "grammar",
    "typography",
    "proof",
    "NBSP",
    "non-breaking",
    "space",
    "hyphen"
  ],
  "author": {
    "name": "Simon Alling",
    "email": "alling.simon@gmail.com",
    "url": "https://simonalling.se"
  },
  "license": "MIT",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "lint": "tslint --project .",
    "build": "npm run clean && tsc -d -p . && npm run rename && tsc --module CommonJS -p .",
    "clean": "rm -rf dist/*",
    "rename": "renamer --force --find \"/\\.js$/\" --replace \".mjs\" \"dist/**\"",
    "test": "jest",
    "verify": "npm run lint && npm run build && npm run test"
  },
  "sideEffects": false,
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/__tests__/.+\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "highlight-mistakes": "^1.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "renamer": "^1.1.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
